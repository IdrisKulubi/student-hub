{
  "extends": "@workspace/typescript-config/react-native.json",
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@workspace/ui": ["../../packages/ui"]
    },
    "types": ["nativewind/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 